{
    "dependencies": {
        "main.js": {
            "files": [
                "scripts/main.coffee"
            ]
        },
        "main.css": {
            "files": [
                "styles/main.scss"
            ],
            "main": true
        }
    },
    "config": {
        "devUrl": "http://localhost/_learn/osclass/",
        "browserSync": {
            "watch": [
                "**/*.php",
                "_posts/*"
            ],
            "baseDir": "./_site",
            "port": 3000
        },
        "jekyll": {
            "watch": [
                "{_includes,_layouts}/**/*.html",
                "*.html",
                "*.md",
                "_posts/*"
            ]
        },
        "sassPaths" :[
            "bower_components/foundation-sites/scss",
            "bower_components/motion-ui/src"
        ]
    },
    "paths": {
        "source": "assets/",
        "dist": "dist/"
    }
}
